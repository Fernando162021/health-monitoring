type Device {
    deviceId: String!
    isActive: Boolean!
    lastVital: Vital
}

type Vital {
    id: ID!
    heartRate: Float!
    oxygenLevel: Float!
    bodyTemperature: Float!
    steps: Int!
    createdAt: String!
}

type Alert {
    id: ID!
    deviceId: String!
    metric: String!
    value: Float!
    threshold: String!
    triggeredAt: String!
    acknowledged: Boolean!
}

type Query {
    devices: [Device!]!
}

type Subscription {
    liveVitals: Vital!
    liveAlerts: Alert!
}

